<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_master_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.sddtu.engifest2017.MasterEventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        android:src="@drawable/engievents"
        />
            <TextView
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:text="Rules And Regulations"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#e53f3f"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:textColor="#e53f3f"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIME"
                    android:textColor="#e53f3f"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18-20th Feb 2017"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_weight="0.6"
                    android:id="@+id/eventdate"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10AM - 12AM"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/eventtime"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:text="Venue"
                        android:textColor="#e53f3f"
                        android:id="@+id/eventvenue"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delhi Technological University"
                        android:textColor="#000"
                        android:textSize="17dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="BR Ambedkar Auditorium"
                        android:id="@+id/full_venue"
                        />
                </LinearLayout>
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:backgroundTint="#e53f3f"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/nav"
                    android:id="@+id/nav_button"
                    />
            </LinearLayout>
            <TextView
                android:padding="10dp"
                android:textSize="11dp"
                android:textColor="#e53f3f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Official Link"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:autoLink="web"
                android:text="EnfiFest Infinity"
                android:textColor="#4c7093"
                android:id="@+id/eventlink"

                />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:text="@string/Anusanthan"
        android:id="@+id/rules_details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="537dp"
        android:layout_marginStart="537dp" />
</RelativeLayout>
